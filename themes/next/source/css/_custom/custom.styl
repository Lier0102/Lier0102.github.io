// Custom styles.
.header {  background:url(https://oldcdn.yangbingdong.com/img/header/header_background.jpg);}

.site-subtitle{ font-size: 15px; color: white; }

.site-title {
    font-size: 40px;
    font-weight: bold;
}

.brand{
    background: transparent;
}

.menu {
	margin-top: 20px;
	padding-left: 0;
	text-align: center;
	background: rgba(240, 240, 240, 0.5);
	margin-left: auto;
	margin-right: auto;
	width: 530px;
	border-radius: initial;
	-webkit-box-shadow: 0 0 15px #590016;
}

a {
    color: rgba(0,0,0,0.8);
}
a:hover {
    color: #ff106c;
    border-bottom-color: #ff106c;
}

.menu .menu-item a {
    font-size: 14px;
}
.menu .menu-item a:hover {
    border-bottom-color: #ff106c;
}


.post {
    margin-top: 10px;
    margin-bottom: 40px;
    padding: 21px;
    -webkit-box-shadow: 0 0 7px #657b83;
   }

#disqus_proxy_thread .post{
  opacity: 1 !important;
  box-shadow: none !important;
  -webkit-box-shadow: none !important;
}

.site-description {
    font-size: 16px;
}

.header-inner {
    padding: 45px 0 25px;
    width: 700px;
}

.site-author-name {
    font-family: 'Comic Sans MS', sans-serif;
    font-size: 20px;
}

.posts-expand .post-eof {
    margin: 40px auto 40px;
    background: white;
}

.btn {
    margin-top: 20px;
}

code {
    color: #e6006b;
    background: #fff;
    border-radius: 3px;
    border: 1px solid #999;
    border-radius: 0.4em;
    font-size: 0.8em;
    /* font-weight: 600; */
    /* padding: 2px 4px; */
    margin: 0 1px;
}

strong {
    color: #750c0c;
}

blockquote {
    border-left: 5px solid #657b83;
}

.footer {
    color: #555;
}

body {
    color: #444;
    font-size: 16px;
    background: rgba(240, 240, 240, 0.1);
}


.posts-expand .post-title-link::before {
    background-image: linear-gradient(90deg, #a166ab 0%, #ef4e7b 25%, #f37055 50%, #ef4e7b 75%, #a166ab 100%);
}

.post-body h2, h3, h4, h5, h6 {
    border-left: 4px solid #657b83;
    padding-left: 10px;
}

.post-body h1 {
    border-left: 5px solid #657b83;
    padding-left: 10px;
}

#days {
    display: block;
    color: #fffa74;
    font-size: 14px;
    margin-top: 15px;
}

.highlight figcaption {
    margin: 0em;
    padding: 0.5em;
    background: #eee;
    border-bottom: 1px solid #e9e9e9;
}
.highlight figcaption a {
    color: rgb(80, 115, 184);
}

